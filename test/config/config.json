{
    "driver": {
        "browser": "phantomjs"
    },
    "data": {
        "baseUrl": "https://www.google.com"
    },
    "profiles": {
        "base": {
            "tests": "path:./*.js",
            "reports": "path:report",
            "env": {
                "DEBUG": "nemo-runner*"
            },
            "driver": {
                "browser": "phantomjs"
            },
            "mocha": {
                "timeout": 180000,
                "reporter": "mochawesome",
                "retries": 5
            }
        },
        "jenkins": {
            "mocha": {
                "reporter": "mocha-jenkins-reporter"
            }
        },
        "chrome": {
            "driver": {
                "browser": "phantomjs"
            }
        },
        "firefox": {
            "driver": {
                "browser": "phantomjs"
            }
        }
    }
}
