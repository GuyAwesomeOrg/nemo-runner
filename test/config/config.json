{
    "driver": {
        "browser": "phantomjs"
    },
    "data": {
        "baseUrl": "https://www.google.com"
    },
    "profiles": {
        "base": {
            "tests": "path:./*.js",
            "reports": "path:report",
            "env": {
                "DEBUG": "nemo-runner*"
            },
            "driver": {
                "browser": "phantomjs"
            },
            "mocha": {
                "timeout": 180000,
                "reporter": "mochawesome"
            }
        },
        "xunit": {
            "mocha": {
                "reporter": "xunit",
                "reporterOptions": {
                    "output": "this just tells nemo-runner we want to output files"
                }
            }
        },
        "search": {
            "data": {
                "google": {
                    "baseUrl": "https://www.google.com"
                },
                "yahoo": {
                    "baseUrl": "http://www.yahoo.com"
                }
            }
        },
        "pay": {
            "data": {
                "paypal": {
                    "baseUrl": "https://www.paypal.com"
                },
                "square": {
                    "baseUrl": "http://www.squareup.com"
                }
            }
        },
        "chrome": {
            "driver": {
                "browser": "phantomjs"
            }
        },
        "firefox": {
            "driver": {
                "browser": "phantomjs"
            }
        }
    }
}
